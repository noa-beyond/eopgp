
{
  "ApplicationName": "Gateway",
  "AppVersion": "1.1.6",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.OpenTelemetry"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "OutputTemplate": "[{AppVersion}][{Timestamp:yyyy-MM-ddTHH:mm:ss.fff}][{Level:u}][{ClassName}] {Message:lj}{NewLine}{Exception}",
          "Path": null,
          "RollingInterval": null,
          "Endpoint": null,
          "Protocol": null
        }
      },
      {
        "Name": "File",
        "Args": {
          "OutputTemplate": "[{AppVersion}][{Timestamp:yyyy-MM-ddTHH:mm:ss.fff}][{Level:u}][{ClassName}] {Message:lj}{NewLine}{Exception}",
          "Path": "gateway-.log",
          "RollingInterval": "Day",
          "Endpoint": null,
          "Protocol": null
        }
      },
      {
        "Name": "OpenTelemetry",
        "Args": {
          "OutputTemplate": null,
          "Path": null,
          "RollingInterval": null,
          "Endpoint": "http://localhost:4317",
          "Protocol": "Grpc"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "ApplicationName": "Gateway",
      "AppVersion": "1.1.6"
    }
  },
  "AllowedHosts": "*",
  "ConnectionStringsDb": {
    "PostgresDb": "Host=postgres-service;Database=****;Username=****;Password=****"
    },
  "ConnectionStringsApiConfiguration": {
    "BaseUrl": "https://catalogue.dataspace.copernicus.eu",
    "OpenSearchBaseUrl": "https://catalogue.dataspace.copernicus.eu/",
    "Password": "****",
    "Username": "****"
  },
  "ConnectionStringsKafka": {
    "BootstrapServers": "kafka1:9092,kafka2:9092",
    "Topic": "noa.gateway.request",
    "GroupId": "gateway-group",
    "AutoOffsetReset": "AutoOffSetResetEarliest"
  },
  "KeyVaultEndpoint": "#{KeyVaultEndpoint}#",
  "CORS": {
    "AllowedOrigins": [
      ""
    ]
  },
  "OpenTelemetry": {
    "ServiceName": "",
    "OtlpEndpoint": "#{OtlpEndpoint}#"
  }
}
