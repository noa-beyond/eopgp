{
  "ApplicationName": "NoaHubManager",
  "AppVersion": "1.1.4",
  "Serilog": {
    "Using": [
      "Serilog.Sinks.Console",
      "Serilog.Sinks.File",
      "Serilog.Sinks.OpenTelemetry"
    ],
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning",
        "Microsoft.AspNetCore": "Warning",
        "Confluent.Kafka": "Error",     
        "rdkafka": "Fatal" 
      }
    },
    "WriteTo": [
      {
        "Name": "Console",
        "Args": {
          "OutputTemplate": "[{AppVersion}][{Timestamp:yyyy-MM-ddTHH:mm:ss.fff}][{Level:u}][{ClassName}] {Message:lj}{NewLine}{Exception}",
          "Path": null,
          "RollingInterval": null,
          "Endpoint": null,
          "Protocol": null
        }
      },
      {
        "Name": "File",
        "Args": {
          "OutputTemplate": "[{AppVersion}][{Timestamp:yyyy-MM-ddTHH:mm:ss.fff}][{Level:u}][{ClassName}] {Message:lj}{NewLine}{Exception}",
          "Path": "noaHubManager-.log",
          "RollingInterval": "Day",
          "Endpoint": null,
          "Protocol": null
        }
      },
      {
        "Name": "OpenTelemetry",
        "Args": {
          "OutputTemplate": null,
          "Path": null,
          "RollingInterval": null,
          "Endpoint": "http://localhost:4317",
          "Protocol": "Grpc"
        }
      }
    ],
    "Enrich": [
      "FromLogContext",
      "WithMachineName",
      "WithThreadId"
    ],
    "Properties": {
      "ApplicationName": "NoaHubManager",
      "AppVersion": "1.1.4"
    }
  },
  "AllowedHosts": "*",
  "KafkaConfiguration": {
    "GatewayKafkaConfiguration": {
      "BootstrapServers": "kafka1:9092,kafka2:9092",
      "GroupId": "hub-consumer-group",
      "Topic": "noa.gateway.request",
      "AutoOffsetReset": "Earliest",
      "EnableAutoCommit": true,
      "SessionTimeoutMs": 10000
    },
    "ChDetectionMappingConsumerKafkaConfiguration": {
      "BootstrapServers": "kafka1:9092,kafka2:9092",
      "GroupId": "hub-consumer-group",
      "Topic": "noa.chdm.response",
      "AutoOffsetReset": "Earliest",
      "EnableAutoCommit": true,
      "SessionTimeoutMs": 10000
    },
    "ChDetectionMappingProducerKafkaConfiguration": {
      "BootstrapServers": "kafka1:9092,kafka2:9092",
      "Topic": "noa.chdm.request"
    },
    "StacConsumerKafkaConfiguration": {
      "BootstrapServers": "kafka1:9092,kafka2:9092",
      "GroupId": "hub-consumer-group",
      "Topic": "noa.stac.response",
      "AutoOffsetReset": "Earliest",
      "EnableAutoCommit": true,
      "SessionTimeoutMs": 10000
    },
    "StacProducerKafkaConfiguration": {
      "BootstrapServers": "kafka1:9092,kafka2:9092",
      "Topic": "noa.stac.request"
    }
  },
  "ConnectionStringsDb": {
    "PostgresDb": "Server=postgres-service:5432;Database=****;User Id=****;Password=****;"
  },
  "KeyVaultEndpoint": "#{KeyVaultEndpoint}#",
  "CORS": {
    "AllowedOrigins": [
      ""
    ]
  },
  "OpenTelemetry": {
    "ServiceName": "",
    "OtlpEndpoint": "#{OtlpEndpoint}#"
  }
}
